#!/bin/bash
nfpgw=`dirname $0`
echo $0
echo $@
echo $1
if [ $# -le 2 ] || [ $2 != "-np" ]; then
  echo "An example of usage: job_ham si -np 4 [options for lmf]"
  exit
else
  MPI_SIZE=$3
fi
rm -f HamiltonianPMT*
echo 'Runnnig Hamiltonian generation'
mpirun -np $3 $nfpgw/lmf-MPIK $1 --writeham --mkprocar --fullmesh
# Get Hamiltonian file, namded as HamiltonianMTO
cat HamiltonianPMT.* >HamiltonianPMT
rm HamiltonianPMT.* 
# Get projectedMTO-only Hamiltonian
$nfpgw/lmfham1

