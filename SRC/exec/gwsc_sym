#!/bin/bash 
# ---------------------------------------------------------
# QP self-consistent GW itteration using MPI. Using run_arg2
### you may need to set echo_run and serial_run in /run_arg2 for cray machine
# ---------------------------------------------------------

if [ $# -ne 4 ] || [ $2 != "-np" ] ; then
    echo "An example of usage: gwsc 5 -np 4 si, where 5 means 5+1 iterations"
    exit 101
fi
n=$0
nfpgw=`dirname $0`
TARGET=$4
MPI_SIZE=$3
NO_MPI=0
ITER=$1
lx0_para_option=""  #set lx0_para_option='-nq 4 -ns 1'

### Read funcitons run_arg2 and run_arg2_tee defined in a file run_arg2 ###
source $nfpgw/run_arg2 #define echo_run and serial_run in run_arg2

$echo_run echo "### START gwsc: ITER= "$ITER, "MPI size= " $MPI_SIZE, "TARGET= "$TARGET

# ##### rm and mkdir ##############
# if [ -e NoCore ]; then #backword compatibility not so meaningful now.
#   rm -f NoCore 
# fi
# if [ -e QPU ]; then
#  rm -f QP[UD]
# fi
if [ ! -e SEBK ]; then
    mkdir SEBK
fi
if [ ! -e STDOUT ]; then
    mkdir STDOUT
fi
## mv sigm or simg.$TARGET to sigm. And make softlink to simg.$TARGET.
## sigm is prior to simg.$TARGET.
if [ -e sigm ]; then
    if [ -e sigm.$TARGET ]; then
	mv sigm.$TARGET sigm.$TARGET.bakup 
	ln -s -f sigm sigm.$TARGET 
	$echo_run echo '--- sigm is used. sigm.$TARGET is softlink to it  ---'
    fi
else
    if [ -e sigm.$TARGET ]; then
	mv sigm.$TARGET sigm
	ln -s -f sigm sigm.$TARGET 
	$echo_run echo '--- sigm.$TARGET is moved to sigm. sigm.$TARGET is softlink now.  ---'
    else
	$echo_run echo '--- No sigm nor sigm.$TARGET files for starting ---'
    fi
fi 

##### itteration loop start ##########################################
for ix in `seq 0 ${ITER}`
do
    ##### self-consistent calculation for given Sigma(self-energy ###
    $echo_run echo " ---- goto sc calculation for given sigma-vxc --- ix=",$ix
    if [ $ix == 0 ]; then # ix=0 is for iteration from LDA.
	if [ -e sigm.$TARGET ] ; then
	    $echo_run echo " we have sigm already, skip iter=0"
	    continue # goto ix=1
	fi   
	$echo_run echo "No sigm ---> LDA caculation for eigenfunctions "
	rm -f llmf
	run_arg2 '---' $MPI_SIZE $nfpgw          /lmf-MPIK llmf_lda $TARGET
	cp rst.$TARGET rst.$TARGET.lda
    else
	run_arg2 '---' $MPI_SIZE $nfpgw          /lmf-MPIK llmf $TARGET
    fi
    rm -f ewindow.${TARGET}* qbyl.${TARGET}* eigze*.${TARGET}* mixm.${TARGET}
    argin=0; run_arg2 $argin $NO_MPI  $nfpgw  /lmfgw-MPIK  llmfgw00 $TARGET 
    argin=1; run_arg2 $argin $NO_MPI  $nfpgw  /qg4gw lqg4gw   #Generate requied q+G v

    ### eigenvalues for micro-tetrahedron method. Rarely used.
    # if [ -e Qmtet ]; then
    # 	mv Qmtet Qeigval 
    # 	argin=5; run_arg2 $argin $MPI_SIZE $nfpgw /lmfgw-MPIK llmfgw_eigval $TARGET
    # 	mv eigval eigmtet
    # fi
    argin=1; run_arg2 $argin $MPI_SIZE $nfpgw /lmfgw-MPIK llmfgw01 $TARGET
    run_arg2  '---' $NO_MPI   $nfpgw /lmf2gw     llmf2gw  #reform data for gw

    mv normchk* STDOUT

    ##### main stage of gw ################
    argin=0; run_arg2 $argin $NO_MPI   $nfpgw /rdata4gw_v2 lrdata4gw_v2 #prepare files
    rm gw1* gw2* gwa* gwb*
    if [ $ix == 0 ]; then 
	cp evec.$TARGET evec0  # used in hqpe_sc for isigma_en==5
    fi
    if [ -e ANFcond ]; then
	cp EVU EVD  # This is for ANFcond. Rarely used recently
    fi
    argin=1; run_arg2 $argin $NO_MPI $nfpgw   /heftet leftet # A file EFERMI for hx0fp0
#    argin=1; run_arg2 $argin $NO_MPI $nfpgw   /hchknw lchknw # A file NW, containing nw 
    ### Core part of the self-energy (exchange only) ###
    argin=3; run_arg2 $argin $NO_MPI $nfpgw   /hbasfp0 lbasC  # Product basis generation 
    argin=3; run_arg2 $argin $MPI_SIZE $nfpgw /hvccfp0 lvccC # Coulomb matrix for lbasC 
    argin=3; run_arg2 $argin $MPI_SIZE $nfpgw /hsfp0_sc lsxC # Sigma from core1
    mv stdout* STDOUT
    ### Valence part of the self-energy Sigma ###
    argin=0; run_arg2 $argin $NO_MPI $nfpgw   /hbasfp0 lbas # Product basis generation 
    argin=0; run_arg2 $argin $MPI_SIZE $nfpgw /hvccfp0 lvcc # Coulomb matrix for lbas 
    argin=1; run_arg2 $argin $MPI_SIZE $nfpgw /hsfp0_sc lsx # Exchange Sigma
    mv stdout* STDOUT
    if [ -e WV.d ]; then
	rm -f WV* 
    fi
    # following two runs are most expensive #
    argin=11; run_arg2 $argin $MPI_SIZE $nfpgw /hx0fp0_sc lx0 $lx0_para_option #x0 part
    mv stdout* STDOUT
    argin=2;  run_arg2 $argin $MPI_SIZE $nfpgw /hsfp0_sc lsc #correlation Sigma
    mv stdout* STDOUT
    argin=0;  run_arg2 $argin $NO_MPI $nfpgw   /hqpe_sc lqpe #all Sigma are combined.
    $echo_run echo -n 'OK! --> '
    ### final part of iteration loop. Manupulate files ###
    cp evec.$TARGET evec_prev_iter
    ln -s -f sigm sigm.$TARGET
    mv SEX* SEC* XC* SEBK
    for file in sigm QPU QPD TOTE.UP TOTE.DN lqpe lsc lsx lx0 llmfgw01 evecfix.chk llmf ESEAVR 
    do
	if [ -e $file ]; then
	    cp $file $file.${ix}run
	fi
    done
    if [ $ix == 0 ] && [ ${ITER} != 0 ]; then
	mkdir RUN0
	run_arg2 '---' $MPI_SIZE $nfpgw           /lmf-MPIK llmf_oneshot $TARGET
	cp ctrl.$TARGET rst.$TARGET sigm.$TARGET llmf_oneshot save.$TARGET RUN0
    fi

    mkdir RUN.ITER${ix}
    cp ctrl.$TARGET rst.$TARGET sigm.$TARGET GWinput save.$TARGET RUN.ITER${ix}

    $echo_run echo == $ix 'iteration over =='
done 
################## end of loop #######################

### finally we have llmf_gwscend ###
run_arg2 '---' $MPI_SIZE $nfpgw             /lmf-MPIK llmf_gwscend.${ITER} $TARGET
rm -f ewindow.${TARGET}* qbyl.${TARGET}* eigze*.${TARGET}* _IN_
if [ ${ITER} == 0 ]; then
    mkdir RUN0
    cp ctrl.$TARGET rst.$TARGET sigm.$TARGET llmf_gwscend.${ITER} save.$TARGET RUN0
fi
$echo_run echo OK! ==== All calclation finished for  gwsc $argv ====
exit
