#!/bin/bash -x
exe=$HOME/ecalj/SRC/exec/

nc=8
mat=Fe

mkdir k4_so2
cd k4_so2
cp ../*.Fe .
cp ../GWinput .
$exe/lmfa $mat >& llmfa
mpirun -np $nc $exe/lmf $mat --phispinsym >& llmf
$exe/job_band $mat -np $nc --phispinsym >& job_band.out
$exe/job_AHC $mat -np $nc --phispinsym |tee job_AHC.out
cd ..

mkdir k4_so1
cd k4_so1
cp ../*.Fe .
cp ../GWinput .
$exe/lmfa $mat >& llmfa
mpirun -np $nc $exe/lmf $mat --phispinsym --testso -vso=1 >& llmf
$exe/job_band $mat -np $nc --phispinsym --testso -vso=1 >& job_band.out
$exe/job_AHC $mat -np $nc --phispinsym --testso -vso=1 |tee job_AHC.out
cd ..

