Standard test case of magnetic hamiltonian
HEADER  La2 Cu O4, Adapted from Paola
VERS    LMASA-6 MM-1 MM:2
IO      SHOW=f HELP=f  WKP=F IACTIV=f VERBOS=61 31 20
TEST0T  lmmag -vntherm=0 mmag
TEST1T  lmmag            mmag
TEST2T  lmmag -vntherm=2 -vmodet=11 mmag
% const frz=f
OPTIONS NSPIN=1 REL=t CCOR=T LMH=F NRMIX=80 2 MTCOR FRZ={frz}
SYMGRP  R4Z R2X I
BZ      TETRA NKABC=5 5 5  SAVDOS=f BZJOB=0
STR     NOCALC=F RMAXS!=4.5
STRUC   NBAS=7 NCLASS=4 NL=3
        ALAT=7.14638 PLAT= -.5 .5 1.7517  .5 -.5 1.7517  .5 .5 -1.7517
% const ntherm=1 modet=31 ttot=.4 ct=7/(ntherm>1?ntherm:1)
DYN     HAM h1: -3 zs1==8
            h2: .1 zs1==8&zs2==8
            h2: .2 is1==2&ib2>=6
            h2: .3 is1==1&zs2==8
            h2: .4 d>6&ib1>1
            h2: .5 t
        ENDH
        KT=.02 TS=.1 TTOT={ttot} BSTOL=2d-4 
        NTHERM={ntherm} MODET={modet} {modet+1} CT={ct} {ct} MX=6
# for MM:2
        SDYN[KT=.02 TS=.1 TTOT={ttot}]
        BSINT[TOL=2d-4]
        GD[NTHERM={ntherm} MODET={modet} {modet+1} CT={ct} {ct}]
        MMHAM[h1: -3 zs1==8
            h2: .1 zs1==8&zs2==8
            h2: .2 is1==2&ib2>=6
            h2: .3 is1==1&zs2==8
            h2: .4 d>6&ib1>1
            h2: .5 t ]
#       MI=2 NSEQ=6 10
CLASS   ATOM=LA  Z=57  R/W=1 RHAM=4   
# LMX=0
        ATOM=CU  Z=29  R/W=1 RHAM=3.75
# LMX=0
        ATOM=OX1 Z=8   R/W=1 RHAM=3.75
# LMX=0
        ATOM=OX2 Z=8   R/W=1 RHAM=3.75
# LMX=0
SITE    ATOM=CU  POS=  0   0   0
        ATOM=OX1 POS= .5   0   0
        ATOM=OX1 POS=  0   .5  0
        ATOM=OX2 POS=  0   0    .63902
        ATOM=OX2 POS=  0   0   -.63902
        ATOM=LA  POS=  0   0    1.26384
        ATOM=LA  POS=  0   0   -1.26384

